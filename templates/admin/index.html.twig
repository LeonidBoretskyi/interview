{% extends 'base.html.twig' %}

{% block title %}Admin Page{% endblock %}

{% block body %}
    <div class="container body-container">
        <div class="row">
            <div class="col-md-9">
                <h1>Questions</h1>

                <table class="table table-striped table-middle-aligned table-borderless">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Question Text</th>
                        <th>Gravity</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for question in questions %}
                        <tr>
                            <td>{{ question.id }}</td>
                            <td>{{ question.questionText }}</td>
                            <td>{{ question.gravity }}</td>
                            <td>{{ question.createdAt ? question.createdAt|date('Y-m-d') : '' }}</td>
                            <td>
                                <a href="{{ path('admin_question_edit', {'id': question.id}) }}"
                                   class="btn btn-warning">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No records found, pleas add new questions through admin panel</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


            </div>
            <div class="col-md-3">
                {{ include('admin/_sidebar.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}